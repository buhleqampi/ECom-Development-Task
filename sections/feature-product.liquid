
{% schema %}
{
  "name": "Feature Section",
  "settings": [
    {
      "type": "product",
      "label": "Select Product",
      "id": "select-product"
    },
    {
      "type": "text",
      "label": "CTA Button Text",
      "id": "cta_text"
    },
    {
      "type": "textarea",
      "label": "Feature Points",
      "id": "feature_points"
    }
  ],
  "presets": [
    {
      "name": "Feature Section",
      "category": "Custom"
    }
  ]
}
{% endschema %}

<div class="feature-section">
  {% if settings.select_product %}
    {% assign product = settings.select_product %}
    <img src="{{ product.featured_image.src | image_url: '600px' }}" alt="{{ product.title }}" width="200px" height="100px">
    <h2>{{ product.title }}</h2>
    <ul>
      {% assign points_array = section.settings.feature_points | newline_to_br | split: '<br>' %}
      {% for point in points_array %}
        <li>{{ point }}</li>
      {% endfor %}
    </ul>
    <a href="{{ product.url }}" class="cta-button">{{ settings.cta_text }}</a>
  {% endif %}
</div>


